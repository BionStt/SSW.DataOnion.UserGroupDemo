
@using SSW.DataOnion.UserGroupDemo.Domain
@model SSW.DataOnion.UserGroupDemo.WebUI.ViewModels.StudentVm

@{
    ViewBag.Title = "Edit Student";
}

<h2>Edit Student</h2>

<div class="clearfix">
    @using (Html.BeginForm("Edit", "Student", new { @class = "form-horizontal", @role = "form"}))
    {

        @Html.HiddenFor(m => m.Id)
        
        @Html.HiddenFor(m=> m.RowVersionBase64)

        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, "First Name", new {@class = "control-label col-md-3"})
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.FirstName, new {@class="form-control"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.LastName, "Last Name", new {@class = "control-label col-md-3"})
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-8 col-md-offset-3">
                <a href="~/Student" class="btn btn-warning">Cancel</a>
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </div>


    }
</div>